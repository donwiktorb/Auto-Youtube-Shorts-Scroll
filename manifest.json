{

    "manifest_version": 2,
    "name": "dwb_yt_shorts_autoscroll",
    "version": "1.5",
  
    "description": "Auto scrolls youtube shorts like tiktok",
  
    "icons": {
      "48": "icons/dwb.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/shorts/*"],
        "js": ["init.js"]
      }
    ],

    "web_accessible_resources": [
        "main.js"
    ]
  
}